@{
    ViewBag.Title = "Home Page";
}

<div class="content">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Ответ</h4>
        <hr>
        <p class="answer"></p>
    </div>
    <br />
    <form>
        <div>
            <label>Выберите значение коэффициента условий работы трубопровода(Yds)</label>
            <div>
                <label>Выберите категорию участка трубопровода</label>
                <select class="selectpicker" id="DDL1">
                    <option>H</option>
                    <option>C</option>
                    <option>B</option>
                </select>
            </div>
            <div>
                <label>Выберите категорию участка трубопровода(Yd)</label>
                <select class="selectpicker" id="DDL2">
                    <option>Низкое</option>
                    <option>Среднее</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="value_1">Введите нормативный предел текучести (Sigmay),МПа</label>
            <input type="text" class="form-control" id="value_1" placeholder="введите текст">
        </div>
        <div class="form-group">
            <label for="value_2">Введите коэффициент надёжности по нагрузке(Yfp)</label>
            <input type="text" class="form-control" id="value_2" placeholder="введите текст">
        </div>
        <div class="form-group">
            <label for="value_3">Введите рабочее давление(p)</label>
            <input type="text" class="form-control" id="value_3" placeholder="введите текст">
        </div>
        <div class="form-group">
            <label for="value_4">Введите наружный диаметр трубы, мм(D)</label>
            <input type="text" class="form-control" id="value_4" placeholder="введите текст">
        </div>
        <div class="form-group">
            <label for="value_5">Введите добавку к толщине стенки трубы на общую коррозию, мм(С)</label>
            <input type="text" class="form-control" id="value_5" placeholder="введите текст">
        </div>
        <button type="submit" class="btn btn-primary" id="btn2">Submit</button>
        

    </form>
</div>